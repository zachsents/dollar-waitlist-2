{
  "name": "dollar-waitlist",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/color": "^3.0.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/formidable": "^3.4.5",
    "@types/morgan": "^1.9.9",
    "@types/numeral": "^2.0.5",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "firebase": "^10.8.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  },
  "scripts": {
    "build-css": "tailwindcss -i ./css/main.css -o ./public/styles.css",
    "build": "bun run --bun build-css && bun ./build-client-scripts.ts",
    "dev-css": "tailwindcss -i ./css/main.css -o ./public/styles.css -w",
    "dev": "conc -n server,tailwind,client \"bun --watch .\" \"bun run dev-css\" \"bun ./build-client-scripts.ts\"",
    "clear-ports": "lsof -i :3000 | awk 'NR>1 {print $2}' | while read pid; do kill $pid; done",
    "test": "xss-scan"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@kitajs/html": "^3.1.2",
    "@kitajs/ts-html-plugin": "^1.3.4",
    "color": "^4.2.3",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "formidable": "^3.5.1",
    "google-auth-library": "^9.6.3",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "numeral": "^2.0.6",
    "sharp": "^0.33.2",
    "zod": "^3.22.4"
  }
}